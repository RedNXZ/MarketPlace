<h1 class="text-2xl font-bold mb-6">Категории товаров</h1>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4">
  <% @categories.each do |category| %>
    <%= link_to category_path(category), class: "block bg-white border border-gray-200 rounded-lg p-4 shadow-sm hover:shadow-md transition duration-200" do %>
      <h2 class="text-lg font-semibold text-gray-800"><%= category.name %></h2>
    <% end %>
  <% end %>
</div>

