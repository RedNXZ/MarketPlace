<div class="container my-5" style="max-width: 400px;">
  <h2 class="mb-4 text-center">Вход в аккаунт</h2>

  <% if flash[:alert].present? %>
    <div class="alert alert-danger" role="alert">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <%= form_with(scope: :user, url: session_path(:user), local: true) do |f| %>
    <div class="mb-3">
      <%= f.label :email, "Email", class: "form-label" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :password, "Пароль", class: "form-label" %>
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", required: true %>
    </div>

    <div class="mb-3 form-check">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, "Запомнить меня", class: "form-check-label" %>
    </div>

    <%= f.submit "Войти", class: "btn btn-primary w-100" %>
  <% end %>

  <div class="mt-3 text-center">
    <%= link_to "Забыли пароль?", new_password_path(resource_name) %> |
    <%= link_to "Регистрация", new_registration_path(resource_name) %>
  </div>
</div>
