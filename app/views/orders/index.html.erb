<h1 class="text-3xl font-bold mb-6">Мои заказы</h1>

<% if @orders.empty? %>
  <p class="text-gray-600">У вас пока нет заказов.</p>
<% else %>
  <ul class="space-y-4">
    <% @orders.each do |order| %>
      <li class="p-4 border border-gray-300 rounded-lg shadow-sm hover:shadow-md transition-shadow duration-200">
        <%= link_to "Заказ №#{order.id}", order_path(order), class: "text-blue-600 font-semibold hover:underline" %>
        <span class="text-gray-700 ml-2">— от <time datetime="<%= order.created_at.iso8601 %>"><%= order.created_at.strftime("%d.%m.%Y %H:%M") %></time></span>
        <span class="ml-4 text-sm text-gray-500">Статус: <strong><%= order.status.presence || "Новый" %></strong></span>
      </li>
    <% end %>
  </ul>
<% end %>
