<h1 class="text-3xl font-bold mb-6">Оформление заказа</h1>

<%= form_with model: @order, local: true, class: "max-w-md space-y-6" do |form| %>
  <div>
    <%= form.label :name, "Имя", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.label :address, "Адрес доставки", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :address, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.label :phone, "Телефон", class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.telephone_field :phone, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= form.submit "Подтвердить заказ", class: "w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition" %>
  </div>
<% end %>
