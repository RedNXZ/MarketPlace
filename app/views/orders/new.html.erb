<% if user_signed_in? %>
  <h1 class="text-3xl font-bold mb-6">Оформление заказа</h1>

  <%= form_with model: @order, local: true, class: "max-w-lg mx-auto space-y-6" do |form| %>
    <% if @order.errors.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
        <p class="font-bold">Обнаружены ошибки:</p>
        <ul class="list-disc list-inside">
          <% @order.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, "Имя", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :name, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true %>
    </div>

    <div>
      <%= form.label :address, "Адрес доставки", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :address, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true %>
    </div>

    <div>
      <%= form.label :phone, "Телефон", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.telephone_field :phone, class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500", required: true %>
    </div>

    <div>
      <%= form.submit "Подтвердить заказ", class: "w-full bg-blue-600 text-white py-2 rounded-md hover:bg-blue-700 transition" %>
    </div>
  <% end %>
<% else %>
  <p class="text-red-600 text-center mt-8">Пожалуйста, войдите в аккаунт для оформления заказа.</p>
  <%= link_to "Войти", new_user_session_path, class: "text-blue-600 hover:underline mt-4 inline-block" %>
<% end %>