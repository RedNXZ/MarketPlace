<h1>Заказ №<%= @order.id %></h1>

<p>Дата: <%= @order.created_at.strftime("%d.%m.%Y %H:%M") %></p>

<table>
  <thead>
  <tr>
    <th>Товар</th>
    <th>Количество</th>
    <th>Цена за шт.</th>
    <th>Итого</th>
  </tr>
  </thead>
  <tbody>
  <% @order.order_items.each do |item| %>
    <tr>
      <td><%= link_to item.product.name, product_path(item.product) %></td>
      <td><%= item.quantity %></td>
      <td><%= number_to_currency(item.product.price, unit: "₽") %></td>
      <td><%= number_to_currency(item.product.price * item.quantity, unit: "₽") %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<p>Общая сумма: <%= number_to_currency(@order.order_items.sum { |i| i.product.price * i.quantity }, unit: "₽") %></p>

<%= link_to 'Вернуться к списку заказов', orders_path %>