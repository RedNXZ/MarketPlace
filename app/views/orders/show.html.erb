<% if @order %>
  <h1 class="text-3xl font-bold mb-6">Заказ №<%= @order.id %></h1>

  <p class="text-gray-700 mb-4">
    Дата: <time datetime="<%= @order.created_at.iso8601 %>"><%= @order.created_at.strftime("%d.%m.%Y %H:%M") %></time>
  </p>

  <div class="overflow-x-auto">
    <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-md">
      <thead class="bg-gray-100 text-left text-sm font-semibold text-gray-700">
      <tr>
        <th class="px-4 py-2">Товар</th>
        <th class="px-4 py-2">Количество</th>
        <th class="px-4 py-2">Цена за шт.</th>
        <th class="px-4 py-2">Итого</th>
      </tr>
      </thead>
      <tbody class="divide-y divide-gray-100 text-sm text-gray-800">
      <% @order.order_items.each do |item| %>
        <% if item.product %>
          <tr class="hover:bg-gray-50 transition-colors">
            <td class="px-4 py-2 font-medium text-blue-600 hover:underline">
              <%= link_to item.product.name, product_path(item.product) %>
            </td>
            <td class="px-4 py-2"><%= item.quantity %></td>
            <td class="px-4 py-2"><%= number_to_currency(item.product.price, unit: "₽") %></td>
            <td class="px-4 py-2 font-semibold"><%= number_to_currency(item.product.price * item.quantity, unit: "₽") %></td>
          </tr>
        <% else %>
          <tr class="hover:bg-gray-50 transition-colors">
            <td class="px-4 py-2 text-red-600" colspan="4">Товар не найден</td>
          </tr>
        <% end %>
      <% end %>
      </tbody>
    </table>
  </div>

  <p class="mt-6 text-lg font-semibold">
    Общая сумма: <span class="text-blue-600"><%= number_to_currency(@order.order_items.sum { |i| i.product&.price.to_f * i.quantity } || 0, unit: "₽") %></span>
  </p>

  <%= link_to '← Вернуться к списку заказов', orders_path, class: "inline-block mt-4 text-blue-600 hover:underline" %>
<% else %>
  <p class="text-red-600 text-center mt-8">Заказ не найден.</p>
<% end %>