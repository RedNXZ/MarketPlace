<h1>Каталог товаров</h1>

<nav>
  <strong>Категории:</strong>
  <%= link_to "Все", products_path %> |
  <% Category.all.each do |category| %>
    <%= link_to category.name, products_path(category_id: category.id) %> |
  <% end %>
</nav>

<div class="products-list">
  <% @products.each do |product| %>
    <div class="product-item">
      <h2><%= link_to product.name, product_path(product) %></h2>
      <p><%= truncate(product.description, length: 100) %></p>
      <p>Цена: <%= number_to_currency(product.price, unit: "₽") %></p>
      <%= button_to "В корзину", add_to_cart_path(product), method: :post %>
    </div>
  <% end %>
</div>