<div class="container my-5" style="max-width: 600px;">
  <h2 class="mb-4 text-center">Добавить новый товар</h2>

  <%= form_with model: @product, local: true, html: { multipart: true } do |f| %>
    <div class="mb-3">
      <%= f.label :name, "Название товара", class: "form-label" %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :description, "Описание", class: "form-label" %>
      <%= f.text_area :description, class: "form-control", rows: 5, required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :price, "Цена (₽)", class: "form-label" %>
      <%= f.number_field :price, class: "form-control", step: 0.01, min: 0, required: true %>
    </div>

    <div class="mb-3">
      <%= f.label :category_id, "Категория", class: "form-label" %>
      <%= f.collection_select :category_id, Category.all, :id, :name, { prompt: "Выберите категорию" }, { class: "form-select", required: true } %>
    </div>

    <div class="mb-3">
      <%= f.label :image, "Изображение", class: "form-label" %>
      <%= f.file_field :image, class: "form-control" %>
    </div>

    <%= f.submit "Создать товар", class: "btn btn-primary w-100" %>
  <% end %>
</div>
